@model IEnumerable<ngo_webapp.Models.DonateViewModel>

<!DOCTYPE html>
<html>
<head>
	<title>Donation Report</title>
	<style type="text/css">
		body {
			font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,"Noto Sans",sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol","Noto Color Emoji";
		}

		.table {
			width: 100%;
			margin-bottom: 2rem;
			border-collapse: collapse;
		}

			.table td, .table th {
				border: 1px solid;
				padding: 1.75rem;
				text-align: center;
			}

			.table th {
				font-size: 30px;
			}

			.table td{
				font-size: 24px
			}
		.red{
			color:red;
		}
	</style>
	<link rel="stylesheet" href="~/assets/css/fontawesome-all.min.css" />
</head>
<body>
	<h1>Donation Bill</h1>
	<table class="table">
		<thead>
			<tr>
				<th>User Name</th>
				<th>Appeal Name</th>
				<th>Amount</th>
				<th>Donation Date</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var donation in Model)
			{
				<tr>
					<td>@donation.UserName</td>
					<td>@donation.AppealName</td>
					<td>@donation.Amount$</td>
					<td>@donation.DonationDate.ToShortDateString()</td>
				</tr>
			}
		</tbody>
	</table>
	<h1 class="red"><i class="fa fa-heart"></i>Thanks for your donation.</h1>
</body>
</html>
