@model ngo_webapp.Models.ProfileViewModel

@if (Model.Donations.Any())
{
<div class="user-dashboard">
    <h2>Username: @Model.Username</h2>
        <h4>Registered on: @Model.RegistrationDate.ToShortDateString()</h4>
        <p>Balance: @Model.Balance.ToString("C")</p>

    <div class="dashboard-widgets">
        <div class="widget total-donations">
            <span>Total Donations</span>
                <h3>@Model.TotalAmount.ToString("C")</h3>
        </div>
        <div class="widget projects-supported">
            <span>Projects Supported</span>
                <h3>@Model.ProjectCount</h3>
        </div>
    </div>
</div>

<div class="donation-history">
    <h4>Your Donation History</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Appeal</th>
                <th>Amount</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
                @foreach (var donation in Model.Donations)
                {
                    <tr>
                        <td>@donation.AppealName</td>
                        <td>@donation.Amount.ToString("C")</td>
                        <td>@donation.DonationDate.ToShortDateString()</td>
                    </tr>
                }
        </tbody>
    </table>
</div>
    }
    else
    {
    <p>No donations made yet.</p>
    }