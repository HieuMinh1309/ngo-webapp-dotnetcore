@{
	ViewData["Title"] = "Edit an Event";
}

@model ngo_webapp.Areas.Admin.Models.Entities.Appeal

@if (Model == null)
{
	 <p>This event is not exists</p>
}
else
{
	<div class="col-lg-12">
		<h1>Edit Event</h1>
		<form class="row" asp-action="UpdateEvent" method="post" enctype="multipart/form-data">
			<div class="mt-3 col-lg-1">
				<lable class="form-label">ID</lable>
				<input type="text" class="form-control" asp-for="AppealsId" readonly />
			</div>

			<div class="mt-3 col-lg-3">
				<lable class="form-label">Name</lable>
				<input type="text" class="form-control" asp-for="AppealsName" />
			</div>

			<div class="mt-3 col-lg-3">
				<lable class="form-label">Your Organize</lable>
				<input type="text" class="form-control" asp-for="Organization" />
			</div>

			<div class="mt-3 col-lg-5">
				<lable class="form-label">Description</lable>
				<input type="text" class="form-control" asp-for="Description" />
			</div>

			<div class="mt-3 col-lg-2">
				<lable class="form-label">Create Date</lable>
				<input type="date" class="form-control" asp-for="CreationDate" readonly />
			</div>

			<div class="mt-3  col-lg-2">
				<lable class="form-label">End Date</lable>
				<input type="text" class="form-control" asp-for="EndDate" />
			</div>

			<div class="mt-3  col-lg-2">
				<lable class="form-label">Donation Limit</lable>
				<input type="text" class="form-control" asp-for="Amount" />
			</div>

			<div class="mt-3 col-lg-1">
				<lable class="form-label" asp-for="Status">Status</lable>
				<input type="checkbox" class="form-control" name="Status" />
			</div>

			<div class="mt-3 col-lg-5">
				<lable class="form-label">Images</lable>
				<input type="file" class="form-control" asp-for="AppealsImage" accept=".jpg, .jpeg, .png" />
			</div>

			<div class="mt-3 col-lg-12">
				<button type="submit" class="btn btn-outline-success">Create</button>
			</div>
		</form>
	</div>
}
