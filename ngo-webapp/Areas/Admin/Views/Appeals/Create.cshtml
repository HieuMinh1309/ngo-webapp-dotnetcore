@model ngo_webapp.Models.Entities.Appeal

@{
	ViewData["Title"] = "Create Event";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
	<div class="card-header">
		<h4 class="card-title">Create Event</h4>
	</div>
	<div class="card-body">
		<form class="row" asp-controller="Appeals" asp-action="CreateEvent" method="post" enctype="multipart/form-data">
			<div class="mt-3 col-lg-6">
				<lable class="form-label">Name</lable>
				<input type="text" class="form-control" asp-for="AppealsName" required />
			</div>

			<div class="mt-3 col-lg-6">
				<lable class="form-label">Your Organize</lable>
				<input type="text" class="form-control" asp-for="Organization" />
			</div>

			<div class="mt-3 col-lg-12">
				<lable class="form-label">Description</lable>
				<input type="text" class="form-control" asp-for="Description" />
			</div>

			<div class="mt-3 col-lg-4">
				<lable class="form-label">End Date</lable>
				<input type="date" class="form-control" asp-for="EndDate" required />
			</div>

			<div class="mt-3 col-lg-4">
				<lable class="form-label">Donation Limit</lable>
				<input type="text" class="form-control" asp-for="Amount" required />
			</div>

			<div class="mt-3 col-lg-4">
				<lable class="form-label">Images</lable>
				<input type="file" class="form-control" asp-action="UploadFile" asp-for="AppealsImage" accept=".jpg, .png, .jpeg" />
			</div>

			<div class="mt-3 col-lg-12">
				<button type="submit" class="btn btn-outline-success">Save</button>
			</div>
		</form>
		<div><button class="btn btn-outline-info" asp-controller="Appeals" asp-action="List">Return to Event Page</button></div>
	</div>
</div>